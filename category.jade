extends base
{% from "include/macros.jade" import make_pager %}
block content
	entries = get_data(type='post', sort='desc', pager_name='category').group('tags')
	ul.category-list
		for tags, posts in entries
			li.list-category= tags
			ul.listing
				for post in posts
					li.listing-item
						span.date= post.date.format('%Y-%m-%d')
						a(href=post.url, title=post.title)= post.title
	+make_pager(pager_name='category')